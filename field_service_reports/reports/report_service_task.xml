<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="report_service_task">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page" style="margin-bottom: 50px;">
                    <div class="product_table" style="margin-top: 400px;">
                        <br/><br/><br/>
                        <h2 style="margin-bottom: 100px;">servicerapport</h2>
                        <table class="table table-sm" style="font-size: 20px; width: 100%;">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Employee</th>
                                    <th>Customer Name</th>
                                    <th>Customer Address</th>
                                    <th>Customer Phone</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="task">
                                    <tr>
                                        <td><span t-field="task.date_assign"/></td>
                                        <td><span t-field="task.user_ids.name"/></td>
                                        <td><span t-field="task.partner_id.name"/></td>
                                        <td><span t-field="task.partner_id.contact_address"/></td>
                                        <td><span t-field="task.partner_id.phone"/></td>
                                        <td><span t-field="task.description"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <record id="action_report_field_service_task" model="ir.actions.report">
        <field name="name">Service Report</field>
        <field name="model">project.task</field>
        <field name="report_name">field_service_report.report_service_task</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="project.model_project_task"/>
        <field name="binding_type">report</field>
    </record>


</odoo>
